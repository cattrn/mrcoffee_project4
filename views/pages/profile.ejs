<h1>Profile details for <%= firstname %> <%= lastname %></h1>
<div class="2-column">
    <div>
        <h2>User information</h2>
        <ul>
            <li><strong>First Name: </strong><%= firstname %></li>
            <li><strong>Last Name: </strong><%= lastname %></li>
            <li><strong>Email Address: </strong><%= email %></li>
        </ul>
    </div>
    <div>
        <h2>Schedules</h2>
        <% if (schedules[0].day == null) { %>
            <p><%= firstname %> currently has no schedules registered.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Day</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                    </tr>
                </thead>
                <tbody>
                <% for (i = 0; i < schedules.length; i++) { %>
                    <tr>
                        <td><%= daysOfWeek[schedules[i].day] %></td>
                        <td><%= schedules[i].start_time %></td>
                        <td><%= schedules[i].end_time %></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>
